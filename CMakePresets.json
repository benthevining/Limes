{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/Builds/${presetName}",
      "environment": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      },
      "debug": {
        "output": true
      },
      "warnings": {
        "uninitialized": true,
        "unusedCli": false
      }
    },
    {
      "name": "config_base",
      "inherits": "base",
      "hidden": true,
      "environment": {
        "CMAKE_BUILD_TYPE": "${presetName}"
      }
    },
    {
      "name": "Debug",
      "inherits": "config_base"
    },
    {
      "name": "Release",
      "inherits": "config_base"
    },
    {
      "name": "ios_base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "inherits": "base",
      "hidden": true,
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "9.3"
      }
    },
    {
      "name": "ios_simulator",
      "inherits": "ios_base",
      "toolchainFile": "${sourceDir}/toolchains/ios_simulator.cmake"
    },
    {
      "name": "ios",
      "inherits": "ios_base",
      "toolchainFile": "${sourceDir}/toolchains/ios.cmake",
      "cacheVariables": {
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_IDENTITY": "\"iPhone Developer\""
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "cleanFirst": true,
      "jobs": 4,
      "verbose": true,
      "configuration": "${presetName}"
    },
    {
      "name": "Debug",
      "inherits": "base",
      "configurePreset": "${presetName}"
    },
    {
      "name": "Release",
      "inherits": "base",
      "configurePreset": "${presetName}"
    },
    {
      "name": "ios_base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "inherits": "base",
      "hidden": true,
      "nativeToolOptions": [
        "-allowProvisioningUpdates"
      ]
    },
    {
      "name": "ios_simulator",
      "inherits": "ios_base",
      "configurePreset": "${presetName}",
      "nativeToolOptions": [
        "-sdk",
        "iphonesimulator"
      ]
    },
    {
      "name": "ios",
      "inherits": "ios_base",
      "configurePreset": "${presetName}"
    }
  ]
}
